@page "/educadores"
@using SistemaEscolar.Models
@using SistemaEscolar.Services
@inject EducadorService EducadorService
@inject TurmaService TurmaService

<PageTitle>Educadores</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-9">
            <div class="p-4">
                <h3>Seleção de Educador</h3>

                <div class="mb-4">
                    <label for="educadorSelect" class="form-label">Educador:</label>
                    <select id="educadorSelect" @bind="educadorSelecionadoId" class="form-select">
                        <option value="0">Selecione um educador...</option>
                        @foreach (var educador in educadores)
                        {
                            <option value="@educador.Id">@educador.Nome</option>
                        }
                    </select>
                </div>

                @if (educadorSelecionadoId > 0) // Verifica se um educador foi selecionado
                {
                    var educadorSelecionado = educadores.FirstOrDefault(e => e.Id == educadorSelecionadoId);
                    if (educadorSelecionado != null)
                    {
                        <h4>Turmas de @educadorSelecionado.Nome</h4>
                        <div class="row">
                            @foreach (var turmaId in educadorSelecionado.TurmasIds)
                            {
                                var turma = TurmaService.ObterTurmaPorId(turmaId);
                                if (turma != null)
                                {
                                    <div class="col-md-3 mb-3">
                                        <div class="card">
                                            <div class="card-body text-center">
                                                <h5 class="card-title">@turma.Nome</h5>
                                                <p class="card-text">@turma.QuantidadeEstudantes estudantes</p>
                                                <a href="/turma-detalhes/@turma.Id" class="btn btn-primary">Ver Detalhes</a>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    }
                }
                else
                {
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <div class="card">
                                <div class="card-body text-center">
                                    <h5 class="card-title">1º ano A</h5>
                                    <p class="card-text">Selecione um educador</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="card">
                                <div class="card-body text-center">
                                    <h5 class="card-title">1º ano B</h5>
                                    <p class="card-text">Selecione um educador</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="card">
                                <div class="card-body text-center">
                                    <h5 class="card-title">2º ano A</h5>
                                    <p class="card-text">Selecione um educador</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="card">
                                <div class="card-body text-center">
                                    <h5 class="card-title">3º ano A</h5>
                                    <p class="card-text">Selecione um educador</p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@code {
    private List<Educador> educadores = new(); // Lista para armazenar os educadores
    private int educadorSelecionadoId = 0; // ID do educador selecionado

    protected override void OnInitialized() // Carrega os educadores ao inicializar o componente
    {
        educadores = EducadorService.ObterTodosEducadores(); // Obtém a lista de educadores do serviço
    }
}