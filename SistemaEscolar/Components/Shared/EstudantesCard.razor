@using SistemaEscolar.Models

<div class="card h-100">
    <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Estudantes</h5>
        @if (OnAdicionarEstudante.HasDelegate)
        {
            <button class="btn btn-sm btn-light" @onclick="OnAdicionarEstudante">+ Adicionar</button>
        }
    </div>
    <div class="card-body">
        @if (Estudantes != null && Estudantes.Any())
        {
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Idade</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var estudante in Estudantes.OrderBy(e => e.Nome))
                    {
                        <tr>
                            <td>@estudante.Nome</td>
                            <td>@estudante.Idade</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted">Nenhum estudante cadastrado.</p>
        }
    </div>
</div>

@code {
    [Parameter]
    public IEnumerable<Estudante> Estudantes { get; set; } = new List<Estudante>();

    [Parameter]
    public EventCallback OnAdicionarEstudante { get; set; }
}
